{
	"root": true,
	"extends": ["@wsvaio/stylelint-config"],
	"rules": {
		"media-feature-range-notation": null,

		"order/order": [
			"at-rules",
			"custom-properties",
			"dollar-variables",
			"at-variables",
			"declarations",
			"rules",
			"less-mixins"
		],

		"function-no-unknown": [
			true,
			{
				"ignoreFunctions": ["extend"]
			}
		],
		"unit-no-unknown": [
			true,
			{
				"ignoreUnits": ["rpx"]
			}
		]
	}
}
